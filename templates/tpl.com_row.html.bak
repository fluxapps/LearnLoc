<div class="xlel_comment_list2">
	<div class="new_comment comment_init">
		<!--{NEW_COMMENT_FORM}-->
	</div>

	<div class="xlel_comment_row {CSS}">
		<h1 class="xlel_comment_header">
			{XLEL_COMMENT_HEADER}
			<span class="xlel_comment_actions">
				{BUTTONS}
				<!-- BEGIN xlel_comment_answer -->
				<a class="btn btn-default addNewAnswer" id="resp_{ID}">{BUTTON_ANSWER}</a>
				<!-- END xlel_comment_answer -->
				<!-- BEGIN xlel_comment_delete -->
				<a class="submit addNewAnswer" href="{DELETE_LINK}">{BUTTON_DELETE}</a>
				<!-- END xlel_comment_delete -->
			</span>
		</h1>
		<span class="xlel_comment_date xlel_comment_small">{XLEL_COMMENT_DATE}</span>
		<span class="xlel_comment_user xlel_comment_small">{XLEL_COMMENT_USER}</span>

		<div style="clear:both;"></div>
		<!-- BEGIN xlel_comment_img -->
		<div class="xlel_comment_image">
			{XLEL_COMMENT_IMAGE}
		</div>
		<!-- END xlel_comment_img -->
		<p class="xlel_comment_body">{XLEL_COMMENT_BODY}</p>

		<div style="clear:both;"></div>
	</div>
	<div class="new_comment response" id="resp_{ID}_form">
		{NEW_ANSWER_FORM}
	</div>

	<!-- END xlel_comment_row -->
	<!-- END xlel_thread -->

	<!-- BEGIN xlel_comment_noitem -->
	<div class="xlel_comment_row">
		<span>
			{XLEL_COMMENT_NOITEMA}
		</span>
	</div>
	<!-- END xlel_comment_noitem -->
</div>



